<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	
	<!-- 1. date 객체 생성 -->
	<bean id="date" class="java.util.Date" />
	<bean id="bar" class="com.test08.Bar" />
	
	<!-- 2. Foo 클래스의 Foo(Date) 생성자를 이용 -->
	<bean id="foo" class="com.test08.Foo" lazy-init="true">
		<property name="bar" ref="bar"></property>
		<constructor-arg name="date" ref="date"/> <!-- 밑에 name 같아도 충돌안남 밑에는 setDate를 찾기에 -->
		<property name="date" ref="date"></property>
		<property name="number">
			<value type="short">77</value> <!-- 이렇게 타입지정해줄 수도있다 또한 그리고 int니깐 자동형변환됨 -->
		</property>
		
		<property name="student">
			<array>
				<value>김민엽</value>
				<value>배건호</value>
				<value>최강일</value>
			</array>
		</property>
		
		<property name="info">
			<list>
				<value>"봄"</value>
				<value>"여름"</value>
				<value>가을</value>
				<value>겨울</value>
			</list>
		</property>
		<property name="season">
			<map>
				<entry>
					<key><value>1</value></key>
					<value>봄</value>
				</entry>
				<entry key="2" value="여름"></entry>
				<entry key="3" value="가을"/>
				<entry key="4" value="겨울"/>
			</map>
		</property>
		<property name="score">
			<list>
			<bean class="com.test08.Score">
			<constructor-arg name="name" value="김민엽"></constructor-arg>
			<constructor-arg name="kor" value="90"></constructor-arg>
			<constructor-arg name="eng" value="80"></constructor-arg>
			<constructor-arg name="math" value="70"></constructor-arg>
			</bean>
			<ref bean="score"/>						
			</list>		
		</property>
	</bean>
	
	<bean id="score" class="com.test08.Score">
			<constructor-arg name="name" value="배건호"></constructor-arg>
			<constructor-arg name="kor" value="80"></constructor-arg>
			<constructor-arg name="eng" value="80"></constructor-arg>
			<constructor-arg name="math" value="70"></constructor-arg>
	</bean>

</beans>
